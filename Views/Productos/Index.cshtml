@model List<Producto>

<h1>Lista de Productos</h1>

@if (Model.Count == 0) {
    <p>No hay productos registrados</p>
}

<table>
    <tr>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Medida</th>
        <th>Precio</th>
        <th>Descripci√≥n</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Marca</td>
            <td>@item.Medida</td>
            <td>@item.Precio</td>
            <td>@item.Descripcion</td>
        </tr>
    }
</table>